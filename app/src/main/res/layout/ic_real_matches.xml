<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/fdfdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/ic_topbgbg"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="3dp"
        android:text="Upcoming"
        android:textColor="@color/black"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/maindata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fdfdf"
        android:orientation="vertical"
        app:cardBackgroundColor="#693aa2"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="15dp">

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/one"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/leftSideTeamImg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                </io.github.florent37.shapeofview.shapes.CircleView>

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/two"
                    android:layout_toRightOf="@+id/one"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Match"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <io.github.florent37.shapeofview.shapes.CircleView
                    android:id="@+id/two"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    app:shape_circle_borderWidth="0dp">

                    <ImageView
                        android:id="@+id/rightSideTeamImg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                </io.github.florent37.shapeofview.shapes.CircleView>

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/datawhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="35sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/left_layt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtLeftSideTeam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:singleLine="true"
                                    android:scrollHorizontally="true"
                                    android:focusableInTouchMode="true"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:text="IND"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/favTeamA"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginLeft="5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_bat"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/ic_vs" />


                            <LinearLayout
                                android:id="@+id/right_layt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtRightSideTeam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:singleLine="true"
                                    android:scrollHorizontally="true"
                                    android:focusableInTouchMode="true"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:text="IND"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/favTeamB"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginRight="5dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_bat"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/txtMatchTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Match Time"
                            android:textColor="@color/c_yellow"
                            android:textSize="@dimen/txt_13" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datawhite"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:visibility="gone"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtVenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/ball_1"
                    android:textSize="@dimen/txt_12" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>
