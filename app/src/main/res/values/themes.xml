<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FancyLiveCricketScore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme_Fullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="colorAccent">@color/bg_color_prmryblck</item>
        <item name="colorPrimary">@color/bg_color_prmryblck</item>
        <item name="colorPrimaryDark">@color/bg_color_prmry_drkblck</item>
    </style>
    <style name="customForeground">
        <item name="android:tint">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="customText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="customTitle">
        <item name="srcCompat">@drawable/ic_title_dark</item>
    </style>

    <style name="customBackground">
        <item name="android:background">@color/color_white_back</item>
        <item name="android:backgroundTint">@color/color_white_back</item>
        <item name="background">@color/color_white_back</item>
        <item name="backgroundTint">@color/color_white_back</item>
    </style>
</resources>